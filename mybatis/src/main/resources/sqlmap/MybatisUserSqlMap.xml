<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="jl.mybatis.mapper.MybatisUserMapper">

    <resultMap id="BaseResultMap" type="jl.mybatis.po.MybatisUser">
        <result property="id" column="id"/>
        <result property="mobile"
                javaType="AESEncrypt"
                jdbcType="VARCHAR"
                column="mobile"/>
        <result property="idCard"
                javaType="AESEncrypt"
                jdbcType="VARCHAR"
                column="id_card"/>
    </resultMap>

    <sql id="Base_Column_List">
        id ,mobile ,id_card 
    </sql>

    <insert id="saveSelective">
        INSERT INTO mybatis_user
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="null!=id">
                id  ,
            </if>
            <if test="null!=mobile">
                mobile  ,
            </if>
            <if test="null!=idCard">
                id_card  
            </if>
        </trim>
        <trim prefix="VALUES (" suffix=")" suffixOverrides=",">
            <if test="null!=id">
                #{id, jdbcType=BIGINT} ,
            </if>
            <if test="null!=mobile">
                #{mobile, jdbcType=VARCHAR, javaType=AESEncrypt} ,
            </if>
            <if test="null!=idCard">
                #{idCard, jdbcType=VARCHAR, javaType=AESEncrypt}
            </if>
        </trim>
    </insert>

    <update id="updateByPrimaryKeySelective">
        UPDATE mybatis_user
        <set>
			<if test="null!=mobile and ''!=mobile ">
                mobile = #{mobile, jdbcType=VARCHAR, javaType=AESEncrypt} ,
			</if>
			<if test="null!=idCard and ''!=idCard ">
                id_card = #{idCard, jdbcType=VARCHAR, javaType=AESEncrypt}
			</if>
        </set>
        WHERE
            id = #{id} 
    </update>

    <select id="getByPrimaryKey" resultMap="BaseResultMap">
        SELECT
            <include refid="Base_Column_List" />
        FROM mybatis_user
        WHERE
            id = #{id} 
    </select>
    
</mapper>